{
  "variables": {
    "bin_url": "{{ env `NOMAD_URL` }}"
  },
  "builders": [
    {
      "type": "digitalocean",
      "image": "ubuntu-12-04-x64",
      "region": "nyc3",
      "size": "512mb",
      "snapshot_name": "nomad-demo-{{timestamp}}"
    },
    {
      "type": "googlecompute",
      "project_id": "massive-bliss-781",
      "source_image": "ubuntu-1404-trusty-v20150909a",
      "zone": "us-central1-c"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D",
        "echo 'deb https://apt.dockerproject.org/repo ubuntu-precise main' > /etc/apt/sources.list.d/docker.list",
        "sudo apt-get -y update",
        "sudo apt-get -y install unzip docker-engine",
        "curl -o /tmp/nomad.zip -L {{ user `bin_url` }}",
        "sudo unzip -d /usr/local/bin /tmp/nomad.zip",
        "mkdir -p /usr/local/etc/nomad"
      ]
    },
    {
      "type": "file",
      "source": "upstart.nomad",
      "destination": "/etc/init/nomad.conf"
    },
    {
      "type": "file",
      "source": "default.hcl",
      "destination": "/usr/local/etc/nomad/nomad.hcl"
    }
  ],
  "post-processors": [
    {
      "type": "atlas",
      "artifact": "timfall/nomad-demo-do",
      "artifact_type": "digitalocean.image"
    },
    {
      "type": "atlas",
      "artifact": "timfall/nomad-demo-gce",
      "artifact_type": "googlecompute.image"
    }
  ],
  "push": {
    "name": "timfall/nomad-demo-do",
    "vcs": true
  },
  "push": {
    "name": "timfall/nomad-demo-gce",
    "vcs": true
  }
}
